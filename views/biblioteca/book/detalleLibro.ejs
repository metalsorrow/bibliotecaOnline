    <div class="row" style="margin: 0 auto">
        <div class="col-12 col-md-4 ">
            <div id="imagen" >
                <img src="<%=libro.urlImg%>" alt="..." class="img-fluid" style="width: 100%;">
            </div>
        </div>
        
